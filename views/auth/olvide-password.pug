extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-6xl.font-extrabold= pagina

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-9.px-4.shadow
                form.space-y-5
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="nombre") Email de Registro
                        input#nombre.w-full.px-3.py-2.border.border-gray-3.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")
                    
                    .flex.item-center.justify-between 
                        a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes cuenta? Crea una
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesion

                    input(class="w-full bg-indigo-600 hover:bg-indigo-800 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar instrucciones")