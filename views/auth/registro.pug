                        input#nombre.w-full.px-3.py-2.border.border-gray-3.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="nombre") Password
                        input#nombre.w-full.px-3.py-2.border.border-gray-3.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")
